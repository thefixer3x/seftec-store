# Unified Environment Template for SefTechHub Monorepo
# Copy to .env or .env.local as needed. Never commit secrets.

# Public URLs & App Info
NEXT_PUBLIC_SITE_URL=https://seftechub.com
NEXT_PUBLIC_VERCEL_ENV=preview

# Supabase Configuration (shared across all apps)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Schema Isolation - Each app uses its own schema
NEXT_PUBLIC_LOGISTICS_PLATFORM_SCHEMA=logistics_platform
NEXT_PUBLIC_SEFTEC_STORE_SCHEMA=seftec_store
NEXT_PUBLIC_SUB_PRO_SCHEMA=sub_pro
NEXT_PUBLIC_DASHBOARD_SCHEMA=dashboard
NEXT_PUBLIC_API_GATEWAY_SCHEMA=api_gateway
NEXT_PUBLIC_RETAIL_B2C_SCHEMA=retail_b2c
NEXT_PUBLIC_BANK_INSIGHT_SCHEMA=bank_insight
NEXT_PUBLIC_TASK_MGR_SCHEMA=task_mgr

# Shared Infrastructure Schemas
NEXT_PUBLIC_AUTH_SERVICE_SCHEMA=auth_service
NEXT_PUBLIC_PAYMENT_GATEWAY_SCHEMA=payment_gateway
NEXT_PUBLIC_AI_TOOLKIT_SCHEMA=ai_toolkit
NEXT_PUBLIC_UI_KIT_SCHEMA=ui_kit
NEXT_PUBLIC_SUPABASE_CLIENT_SCHEMA=supabase_client

# Auth Providers (placeholders only)
GOOGLE_CLIENT_ID=your-google-client-id
GITHUB_CLIENT_ID=your-github-client-id
AZURE_CLIENT_ID=your-azure-client-id
APPLE_CLIENT_ID=your-apple-client-id

# Analytics & Monitoring
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_LOGGER_URL=https://log-api.seftechub.com
VERCEL_ANALYTICS_ID=

# AI Toolkit Configuration
NEXT_PUBLIC_AI_URL=https://ai-api.seftechub.com
NEXT_PUBLIC_AI_API_KEY=your-ai-api-key

# API Gateway Configuration
API_GATEWAY_PORT=4000
API_GATEWAY_HOST=0.0.0.0

# Logging
LOG_LEVEL=info

# Nx Cloud (optional, for distributed caching)
NX_CLOUD_ACCESS_TOKEN=
